{% extends "dashboard.twig" %}

{% block title %}Profiel | Stenden Support Desk{% endblock %}

{% block innerContent %}
    <div class="row">
        <div class="col-lg-11">
            <h2 class="page-header">Profiel</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5 col-md-offset-3">
            {% if errormsg is defined %}
                <div class="alert alert-danger">
                    <a class="close" data-dismiss="alert" href="#">&times;</a>{{ errormsg }}
                </div>
            {% endif %}
            <form class="form-horizontal" role="form" method="POST" action="/profile" enctype="multipart/form-data">
                <fieldset>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="textinput">Naam</label>
                        <div class="col-sm-8">
                            <input type="text" value="{{ profiel.Naam }}" class="form-control" name="naam" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="textinput">Email</label>
                        <div class="col-sm-8">
                            <input type="email" value="{{ profiel.Email }}" class="form-control" name="email" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="textinput">Nieuw wachtwoord</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" name="wachtwoord1" name="email">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="textinput">Herhaal wachtwoord</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" name="wachtwoord2" name="email">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="textinput">Avatar</label>
                        <div class="col-sm-8">
                            <input type="file" class="form-control" name="avatar">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="pull-right">
                                <a href="/" class="btn btn-default">Annuleren</a>
                                <button type="submit" class="btn btn-primary">Opslaan</button>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

