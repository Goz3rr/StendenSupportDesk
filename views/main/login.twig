{% extends "base.twig" %}

{% block title %}Login | Stenden Support Desk{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Aanmelden</h3>
                    </div>
                    <div class="panel-body">
                        {% if errormsg %}
                            <div class="alert alert-danger">
                                <a class="close" data-dismiss="alert" href="#">&times;</a>{{ errormsg }}
                            </div>
                        {% endif %}

                        <form role="form" method="POST" action="/login">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Gebruikersnaam" name="username" type="text" required autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Wachtwoord" name="password" type="password" required>
                                </div>
                                <div class="form-group checkbox">
                                    <label>
                                        <input name="remember" type="checkbox">Gegevens onthouden
                                    </label>

                                    <a href="/forgotpass" class="pull-right">Wachtwoord vergeten</a>
                                </div>
                                {% if redirect %}
                                    <input type="hidden" name="redirect" value="{{ redirect }}">
                                {% endif %}
                                <input type="submit" name="submit" class="btn btn-lg btn-success btn-block" value="Inloggen">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}