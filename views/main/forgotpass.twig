{% extends "base.twig" %}

{% block title %}Login | Stenden Support Desk{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Wachtwoord vergeten</h3>
                    </div>
                    <div class="panel-body">
                        {% if errormsg %}
                            <div class="alert alert-danger">
                                <a class="close" data-dismiss="alert" href="#">&times;</a>{{ errormsg }}
                            </div>
                        {% endif %}
                        
                        <form role="form" method="POST" action="/forgotpass">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Gebruikersnaam" name="username" type="text" required autofocus>
                                </div>
                                <input type="submit" name="submit" class="btn btn-lg btn-success btn-block" value="Opvragen">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}