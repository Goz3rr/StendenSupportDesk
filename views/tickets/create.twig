{% extends "dashboard.twig" %}

{% block title %}Nieuw Incident | Stenden Support Desk{% endblock %}

{% block innerContent %}
    <div class="row">
        <h2>Nieuw incident</h2>
    </div>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form class="form-horizontal" role="form" method="POST" action="/tickets/create">
                <fieldset>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Titel</label>
                        <div class="col-sm-10">
                            <input type="text" placeholder="Titel" name="titel" class="form-control" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Omschrijving</label>
                        <div class="col-sm-10">
                            <textarea type="text" placeholder="Omschrijving" name="omschrijving" class="form-control" style="resize:vertical" rows="6" required></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Type</label>
                        <div class="col-sm-4">
                            <select name="type" class="form-control">
                                <option value="Vraag">Vraag</option>
                                <option value="Verzoek">Verzoek</option>
                                <option value="Incident">Incident</option>
                                <option value="Functioneel Probleem">Functioneel Probleem</option>
                                <option value="Technisch Probleem">Technisch Probleem</option>
                            </select>
                        </div>

                        <label class="col-sm-2 control-label" for="textinput">Prioriteit</label>
                        <div class="col-sm-4">
                            <select name="prioriteit" class="form-control">
                                <option value="Laag">Laag</option>
                                <option value="Gemiddeld">Gemiddeld</option>
                                <option value="Hoog">Hoog</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-primary">Toevoegen</button>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

