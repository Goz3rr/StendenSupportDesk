{% extends "dashboard.twig" %}

{% block title %}Zoeken | Stenden Support Desk{% endblock %}

{% block innerContent %}
    <h2>Zoekresultaten voor {{ search }}</h2>
    <table class="table table-hover">
        <thead>
        <tr><th># ID</th><th>Type</th><th>Kanaal</th><th>Melder</th><th>Omschrijving</th><th>Prioriteit</th><th>Datum</th></tr>
        </thead>
        {% if items %}
            {% for item in items %}
                <tr><td>{{ item.incidentID }}</td><td>{{ item.incidentType }}</td><td>{{ item.incidentMelder }}</td><td>{{ item.incidentOmschrijving }}</td><td>{{ item.incidentPrioriteit }}</td><td>{{ item.incidentDatum }}</td></tr>
            {% endfor %}
        {% else %}
            <tr><td colspan="7">Geen resultaten gevonden</td></tr>
        {%  endif %}
    </table>
{% endblock %}